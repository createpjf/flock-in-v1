{
  "$schema": "https://openclaw.ai/schemas/skill-v1.json",
  "name": "flock-model-switcher",
  "version": "1.0.0",
  "description": "FLock Model Switcher: login to FLock API Platform, list models, and switch between them",
  "author": "createpjf",
  "license": "MIT",
  "repository": "https://github.com/createpjf/flock-in-v1",
  "keywords": ["flock", "ai", "models", "inference"],

  "capabilities": {
    "models": {
      "switch": true,
      "list": true
    },
    "credentials": {
      "store": true,
      "retrieve": true
    }
  },

  "commands": {
    "/flock": {
      "description": "List available models or switch between FLock models",
      "triggers": ["switch to", "use the", "change model", "list models", "show models", "flock models"],
      "arguments": {
        "model": {
          "type": "string",
          "enum": [
            "deepseek-v3.2",
            "qwen3-30b-coding",
            "qwen3-30b-instruct",
            "qwen3-235b-instruct",
            "qwen3-235b-thinking",
            "qwen3-235b-finance",
            "kimi-k2-thinking",
            "minimax-m2.1"
          ],
          "description": "Model ID to switch to"
        }
      }
    }
  },

  "models": {
    "deepseek-v3.2": {
      "name": "DeepSeek V3.2",
      "description": "General purpose, cost-effective",
      "pricing": {
        "input": 0.28,
        "output": 0.42,
        "unit": "per_million_tokens"
      },
      "context_length": 64000
    },
    "qwen3-30b-coding": {
      "name": "Qwen3 30B Coding",
      "description": "Optimized for code generation",
      "pricing": {
        "input": 0.20,
        "output": 0.80,
        "unit": "per_million_tokens"
      },
      "context_length": 32000
    },
    "qwen3-30b-instruct": {
      "name": "Qwen3 30B Instruct",
      "description": "Instruction following",
      "pricing": {
        "input": 0.20,
        "output": 0.80,
        "unit": "per_million_tokens"
      },
      "context_length": 32000
    },
    "qwen3-235b-instruct": {
      "name": "Qwen3 235B Instruct",
      "description": "Complex reasoning tasks",
      "pricing": {
        "input": 0.70,
        "output": 2.80,
        "unit": "per_million_tokens"
      },
      "context_length": 32000
    },
    "qwen3-235b-thinking": {
      "name": "Qwen3 235B Thinking",
      "description": "Deep analysis with extended thinking",
      "pricing": {
        "input": 0.23,
        "output": 2.30,
        "unit": "per_million_tokens"
      },
      "context_length": 32000
    },
    "qwen3-235b-finance": {
      "name": "Qwen3 235B Finance",
      "description": "Financial analysis and reasoning",
      "pricing": {
        "input": 0.23,
        "output": 2.30,
        "unit": "per_million_tokens"
      },
      "context_length": 32000
    },
    "kimi-k2-thinking": {
      "name": "Kimi K2 Thinking",
      "description": "Extended thinking capabilities",
      "pricing": {
        "input": 0.60,
        "output": 2.50,
        "unit": "per_million_tokens"
      },
      "context_length": 128000
    },
    "minimax-m2.1": {
      "name": "MiniMax M2.1",
      "description": "Balanced performance and cost",
      "pricing": {
        "input": 0.30,
        "output": 1.20,
        "unit": "per_million_tokens"
      },
      "context_length": 64000
    }
  },

  "credentials": {
    "fields": {
      "apiKey": {
        "type": "string",
        "required": true,
        "env": "FLOCK_API_KEY",
        "description": "FLock API key from platform.flock.io"
      },
      "model": {
        "type": "string",
        "required": false,
        "default": "deepseek-v3.2",
        "description": "Current model selection"
      }
    }
  },

  "errors": {
    "api_key_not_set": {
      "message": "FLOCK_API_KEY not configured",
      "solution": "Get API key at https://platform.flock.io"
    },
    "invalid_api_key": {
      "message": "API key not created or expired",
      "solution": "Generate new key at platform.flock.io"
    },
    "model_not_found": {
      "message": "Invalid model ID",
      "solution": "Use /flock to see available models"
    }
  }
}
